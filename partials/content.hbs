<article class="single {{post_class}}">
    <div class="image-container" style="margin: 0 0 8rem;display:block;">
        <figure class="single-media kg-width-{{width}}">
            <img srcset="{{> 'srcset'}}" sizes="(min-width: 1023px) 920px, calc(90vw)"
                src="{{img_url feature_image size='xl'}}"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                style="height: auto !important">
            {{#if feature_image_caption}}
            <figcaption>{{feature_image_caption}}</figcaption>
            {{/if}}
        </figure>

        {{#match @page.show_title_and_feature_image}}
        <div class="overlay-text">{{title}}</div>
        {{/match}}

    </div>



    <div class="single-content gh-content gh-canvas">

        {{!-- {{#match @page.show_title_and_feature_image}}
        <h1 class="">{{title}}</h1> {{/match}} --}}

        {{content}}
    </div>
</article>